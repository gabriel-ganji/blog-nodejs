            <div class="card homeCards">
                <div class="card-header">
                    <h4><%= article.title%></h4>
                </div>
                <div class="card-body">
                    <a href="/article/<%= article.slug %>" class="btn btn-primary">Ler artigo</a>
                </div>
            </div>
            <br>
        <% }) %>
        <div class="row">
            <div class="col col-12">
                <a href="/articles/page/2" style="float:right">Next >>></a>
            </div><hr>

        </div><br><br>
    </div>
