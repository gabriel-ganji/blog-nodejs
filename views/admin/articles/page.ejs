<%- include("../../partials/header.ejs") %>

<body>
    <%- include("../../partials/navbarhome.ejs") %>
    <br>
    <div class="container">
        
        <% result.articles.rows.forEach(article => { %>
            <div class="card homeCards">
                <div class="card-header">
                    <h4><%= article.title%></h4>
                </div>
                <div class="card-body">
                    <a href="/article/<%= article.slug %>" class="btn btn-primary">Ler artigo</a>
                </div>
            </div>
            <br>
        <% }) %>
        <div class="row">
            <div class="col col-12">
                <% if(result.page == 2) { %>
                    <a href="/" style="float:left"><<< Prev</a>
                <% } %>

                <% if(result.page > 2) { %>
                    <a href="/articles/page/<%= result.page - 1 %>" style="float:left"><<< Prev</a>
                <% } %>

                <% if(result.next) { %>
                    <a href="/articles/page/<%= result.page + 1 %>" style="float:right">Next >>></a>
                <% } %>
                
            </div><hr>

        </div><br><br>
    </div>
</body>

<%- include("../../partials/footer.ejs") %>