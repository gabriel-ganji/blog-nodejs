<%- include("../../partials/header.ejs") %>
<%- include("../../partials/navbar.ejs") %>
<div class="container">
    <br>
    <br>
    <h2>Categorias</h2>
    <br>
    <a class="btn btn-success" href="/admin/categories/new">Criar nova categoria</a>
    <br>
    <br>
    <table class="table table-bordered whiteTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
           
            <% categories.forEach(category => { %>
                <tr>
                    <td><%= category.id %></td>
                    <td><%= category.title %></td>
                    <td><%= category.slug %></td>
                    <td class="bigTd"> 
                    <a class="btn btn-warning" href="/admin/categories/edit/<%= category.id %>">Editar</a>
                    <form method="post" action="/categories/delete" style="display: inline;" onsubmit="confirmDelete(event, this)">
                        <input type="hidden" name="id" value="<%= category.id %>">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<%- include("../../partials/footer.ejs") %>

<script>

    function confirmDelete(event, form){
        event.preventDefault();
        const decision = confirm("Você quer deletar esta categoria ?");

        if (decision) {
            form.submit();
        } else {
            console.log("Não quero deletar, foi um acidente!");

        }
    }

</script>