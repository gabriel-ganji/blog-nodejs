<body>
    <%- include("../../partials/navbar.ejs") %>
    <div class="container">
        <br>
        <div class="card" id="cardNewCategory">
            <div class="card-header">
                <h2>Edição de categoria</h2>
            </div>
      
            <div class="card-body">
                <form method="post" action="/categories/update">
                    <input class="form-control" type="text" name="title" placeholder="Defina o título da categoria" value="<%= category.title %>">
                    <input type="hidden" name="id" value="<%= category.id %>">
                    <button class="btn btn-success">Atualizar</button>
                </form>
            </div>
        </div>
    </div>
</body>

